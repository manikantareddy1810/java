package oopscircle;

public class Rectangle {
	
	double length;
	double breadth;
	
	public Rectangle(double value1, double value2) {
		
		this.length = value1;
		this.breadth = value2;
	}
	
	public void second(){
		
		System.out.println("area of a rectangle : "+length*breadth);
		System.out.println("perimeter of rectangle : "+2*(length+breadth));
		
		
	}

}


public class Circle {

	public static void main(String[] args) {
		

		Rectangle area = new Rectangle(2,3);
		
		area.second();	

	}

}
